<?xml version="1.0" encoding="utf-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<VBox xmlns:fx="todoit" fx:controller="todoit.control.BrowserControl">
    <children>
        <HBox fx:id="boxHeader" alignment="CENTER"><children>
            <Label fx:id="labelHeader" text="Open Todo List" />
        </children></HBox>

        <ListView fx:id="listViewTodoList" VBox.vgrow="ALWAYS" />
        
        <HBox alignment="BOTTOM_RIGHT"><children>
            <Button fx:id="buttonDelete" text="Delete" onAction="#handleDelete" />
            <Button fx:id="buttonCancel" text="Cancel" onAction="#handleCancel" />
            <Button fx:id="buttonConfirm" text="Confirm" onAction="#handleConfirm" />
        </children></HBox>
    </children>
</VBox>